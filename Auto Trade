local daftarCelestial = {["Job Job Job Sahur"]=true,["Dug Dug Dug"]=true,["Bisonte Giuppitere"]=true,["Alessio"]=true,["Esok Sekolah"]=true,["Diamantusa"]=true} [cite: 5]

task.spawn(function()
    while task.wait(1) do
        if getgenv().AutoTradeVIP or getgenv().AutoTradePlus or getgenv().AutoTradeBahan or getgenv().AutoTradeAdmin then [cite: 5]
            local targetItem = nil
            for _, item in pairs(player.Backpack:GetChildren()) do [cite: 6]
                local bN = item:GetAttribute("BrainrotName")
                local bL = item:GetAttribute("Level")
                local mut = item:GetAttribute("Mutation")
        
                if bN and bL and mut then [cite: 6]
                    -- LOGIKA ADMIN (GALACTIO FANTASMA)
                    if getgenv().AutoTradeAdmin and mut == "Admin" and bN == "Galactio Fantasma" then
                        targetItem = item
                        break
                    -- LOGIKA HACKER
                    elseif mut == "Hacker" then [cite: 6]
                        if getgenv().AutoTradeVIP and bL == 125 and bN ~= "Esok Sekolah" and bN ~= "Diamantusa" and daftarCelestial[bN] then [cite: 6]
                            targetItem = item; break [cite: 7]
                        elseif getgenv().AutoTradePlus and bL == 125 and (bN == "Esok Sekolah" or bN == "Diamantusa") then [cite: 7]
                            targetItem = item; break [cite: 8]
                        elseif getgenv().AutoTradeBahan and bL < 125 and daftarCelestial[bN] then [cite: 8]
                            targetItem = item; break [cite: 9]
                        end
                    end
                end
            end

            if targetItem then
                local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid") [cite: 9, 10]
                if hum and not player.Character:FindFirstChild(targetItem.Name) then [cite: 10]
                    hum:EquipTool(targetItem)
                end
                local targetPlr = game.Players:FindFirstChild(getgenv().nickname) [cite: 10]
                if targetPlr and targetPlr.Character then [cite: 10]
                    local p = targetPlr.Character.HumanoidRootPart:FindFirstChild("TradePrompt") [cite: 11]
                    if p then fireproximityprompt(p) end [cite: 11]
                end
            end
        end
    end
end)

