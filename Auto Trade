local function createBtn(txt, toggleKey, isGlobal, customColor)
    local btn = Instance.new("TextButton", mainFrame) [cite: 13]
    btn.Size = UDim2.new(0.9, 0, 0, 30)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 10
    btn.Text = txt .. ": " .. (isGlobal and (_G[toggleKey] and "ON" or "OFF") or (getgenv()[toggleKey] and "ON" or "OFF"))
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        if isGlobal then
            _G[toggleKey] = not _G[toggleKey] [cite: 14]
            btn.Text = txt .. ": " .. (_G[toggleKey] and "ON" or "OFF")
            btn.BackgroundColor3 = _G[toggleKey] and (customColor or Color3.fromRGB(50, 200, 50)) or Color3.fromRGB(40, 40, 40)
        else
            getgenv()[toggleKey] = not getgenv()[toggleKey] [cite: 14]
            btn.Text = txt .. ": " .. (getgenv()[toggleKey] and "ON" or "OFF")
            btn.BackgroundColor3 = getgenv()[toggleKey] and (customColor or Color3.fromRGB(255, 105, 180)) or Color3.fromRGB(40, 40, 40) [cite: 15]
        end
    end)
    return btn
end

